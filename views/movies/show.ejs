<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MovieStat</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <style>
    .poster {
      height: 430px;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .poster img {
      height: 100%;
      width: auto;
    }

    .likeForm {
      display: flex;
    }

    div {
      border: none;
    }
  </style>
  <link rel="stylesheet" href="/stylesheets/master.css">
</head>

<body class="d-flex flex-column min-vh-100">

  <nav class="navbar sticky-top navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/movies">MovieStat</a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-link" href="/movies">Home</a>
        </div>

        <div class="navbar-nav mx-auto">
          <form action="/movies/search" class="d-flex">
            <input class="form-control me-2" name="searchMovie" type="text" id="searchMovie" list="movieList">
            <datalist id="movieList">
              <% for(let sMovie of movies) {%>
                <option value="<%= sMovie.title %>"></option>
                <% } %>
            </datalist>
            <button class="btn btn-sm btn-outline-dark">Search</button>
          </form>
        </div>



        <div class="navbar-nav ms-auto">
          <% if(!currentUser) {%>
            <a class="nav-link" href="/login">Login</a>
            <a class="nav-link" href="/register">Register</a>
            <% } else{%>
              <a class="nav-link" href="/logout">Logout</a>
              <a class="nav-link" href="/likedMovies/<%= currentUser._id %>">Liked Movies</a>
              <% } %>
        </div>
      </div>
    </div>
  </nav>

  <main class="container mt-5 mb-5">
    <%- include('../partials/flash.ejs') %>

      <div class="row ">
        <div class="row-7">
          <div class="card mb-5 border-0">

            <div class="row g-0">
              <div class="poster col-md-3">
                <img src="http://image.tmdb.org/t/p/w500/<%= posterPath %>" class="card-img-top img-fluid" alt="...">
              </div>

              <div class="col-md-9">
                <div class="card-body">
                  <h3 class="card-title likeForm">
                    <%= movie.title %> 
                  </h3>
                  <p class="card-text text-muted">
                    <%= movie.overview %>
                  </p>
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item lis">Tagline: <%= movie.tagline %>
                  </li>
                  <li class="list-group-item lis">Budget: $<%= movie.budget %>
                  </li>
                  <li class="list-group-item lis">Release date: <%= movie.release_date %>
                  </li>
                  <li class="list-group-item lis">Revenue: $<%= movie.revenue %>
                  </li>
                  <li class="list-group-item lis">Runtime: <%= movie.runtime %> minutes</li>
                  <li class="list-group-item lis">

                    <!-- User feedback option 2.0 -->
                    <% if(currentUser) {%>
                      <% if(!isLikedMovie) {%>
                        <form action="/liked/<%= movie._id %>/<%= currentUser._id %>" method="POST" class="likeForm">
                          <button class="btn btn-sm btn-light">
                            <%- include("like-svgrepo-com.svg") %> Like
                          </button>
                        </form>
                        <% } else {%>
                          <form action="/disliked/<%= movie._id %>/<%= currentUser._id %>" method="POST"
                            class="likeForm">
                            <button class="btn btn-sm btn-light">
                              <%-include("dislike-svgrepo-com.svg") %> Dislike
                            </button>
                          </form>
                          <% } %>
                            <% } %>

                  </li>
                </ul>
              </div>

            </div>
          </div>
        </div>

        <div class="col pb-2">
          <% if(currentUser) {%>
            <h2>Leave a Review</h2>
            <form action="/movies/<%= movie._id %>/reviews" method="POST" class="mb-3 validated-form" novalidate>
              <div class="mb-3">
                <label class="form-label" for="rating">Rating: </label>
                <input class="form-range" min="1" max="5" type="range" name="review[rating]" id="rating">
              </div>
              <div class="mb-3">
                <label class="form-label" for="body">Review: </label>
                <textarea required class="form-control" name="review[body]" id="body" cols="30" rows="3"></textarea>
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>
              <button class="btn btn-success">Add review</button>
            </form>
            <% } %>


              <% for(let review of movie.reviews) {%>
                <div class="card mb-3">
                  <div class="card-body">
                    <h5>
                      Rating: <%= review.rating %>/5
                    </h5>
                    <h6 class="card-subtitle mb-2 text-muted">
                      By <%= review.author.username %>
                    </h6>
                    <p>
                      Review: <%= review.body %>
                    </p>

                    <% if(currentUser && review.author.equals(currentUser._id)) {%>
                      <form action="/movies/<%= movie._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-danger">Delete</button>
                      </form>
                      <% } %>
                  </div>
                </div>
                <% } %>
        </div>
      </div>

      <div class="row pt-3">
        <h1>RECOMMENDED MOVIES:</h1>
        <% for(let i=0; i <5; i++) {%>
          <div class="col">
            <div class="card h-100">
              <% if(top5Posters[i]) {%>
                <img src="http://image.tmdb.org/t/p/w500/<%= top5Posters[i] %>" class="card-img-top img-fluid"
                  alt="...">
                <% } else{%>
                  <img src="data:image/<%=image.img.contentType%>;base64,
                <%=image.img.data.toString('base64')%>" alt="" class="card-img-top img-fluid">
                  <% } %>
                    <div class="card-body">
                      <h6 class="card-title">
                        <a style="color: black; text-decoration: none;" href="/movies/<%= top5Objects[i]._id %>">
                          <%= top5Objects[i].title %>
                        </a>
                      </h6>
                    </div>
            </div>
          </div>

          <% } %>

      </div>
  </main>

  <%- include('../partials/footer.ejs') %>

    <!-- BOOSTRAP -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
      integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
      crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
      integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
      crossorigin="anonymous"></script>

    <script src="/javascripts/validateForm.js"></script>
    <script>
      function getRealValue(ele) {
        var dl = ele.list.options;
        for (var x = 0; x < dl.length; x++) {
          if (dl[x].value == ele.value) {
            ele.value = dl[x].dataset.value;
            return dl[x].dataset.value;
          }
        }
      }
    </script>
</body>

</html>





<!-- FINAL -->